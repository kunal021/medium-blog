generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Users {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  firstName String
  lastName  String
  Post      Posts[]
}

model Posts {
  id          Int        @id @default(autoincrement())
  title       String
  content     String
  publishedAt DateTime   @default(now())
  published   Boolean    @default(false)
  author      Users      @relation(fields: [authorId], references: [id])
  authorId    Int
  comments    Comments[]
  likes       Int        @default(0)
  likedBy     Int[]      @default([])
}

model Comments {
  id      Int    @id @default(autoincrement())
  title   String
  Posts   Posts  @relation(fields: [postsId], references: [id])
  postsId Int
  likes   Int    @default(0)
  likedBy Int[]  @default([])
}
